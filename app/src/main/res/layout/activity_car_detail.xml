<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CarDetail"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:id="@+id/rl_main"
    android:visibility="gone">
    <RelativeLayout
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bt_back"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/ic_arr_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_semibold"
            android:id="@+id/tv_pid"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/sp_22" />
        <ImageView
            android:layout_alignParentEnd="true"
            android:id="@+id/bt_opt"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/ic_more"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:paddingHorizontal="@dimen/dp_15"
                android:layout_marginVertical="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/black"
                    android:text="asdasdsad"
                    android:id="@+id/tv_car_name"/>
                <androidx.cardview.widget.CardView
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/dp_5"
                    app:cardBackgroundColor="@color/color_primary"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/dp_5">
                    <TextView
                        android:layout_marginVertical="@dimen/dp_3"
                        android:layout_marginHorizontal="@dimen/dp_5"
                        android:text="asdasd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/tv_type"
                        android:textSize="@dimen/sp_12"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/white"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img1"
                        android:foreground="@drawable/bg_border_car"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"/>
                    <ImageView
                        android:id="@+id/img2"
                        android:foreground="@drawable/bg_border_car"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"/>
                    <ImageView
                        android:id="@+id/img3"
                        android:foreground="@drawable/bg_border_car"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"/>
                    <ImageView
                        android:id="@+id/img4"
                        android:foreground="@drawable/bg_border_car"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </HorizontalScrollView>
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@android:color/transparent"
                android:foreground="@drawable/bg_avatar"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/dp_50"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/iv_user"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tv_username"
                android:layout_marginVertical="@dimen/dp_15"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_extrabold"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/bt_call"
                    android:layout_toEndOf="@id/cv_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/color_primary"
                    app:cardCornerRadius="@dimen/dp_20">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_bt"
                        android:gravity="center"
                        android:paddingVertical="@dimen/dp_8"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:src="@mipmap/ic_call"/>
                        <TextView
                            android:id="@+id/tv_block"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/white"
                            android:text="@string/call_me"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:id="@+id/bt_email"
                    android:layout_toEndOf="@id/cv_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/green1"
                    app:cardCornerRadius="@dimen/dp_20">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:gravity="center"
                        android:paddingVertical="@dimen/dp_8"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:src="@mipmap/ic_email"/>
                        <TextView
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/white"
                            android:text="@string/email"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/bt_mess"
                    android:layout_toEndOf="@id/cv_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/color_primary"
                    app:cardCornerRadius="@dimen/dp_20">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:gravity="center"
                        android:paddingVertical="@dimen/dp_8"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:src="@mipmap/ic_send"/>
                        <TextView
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/white"
                            android:text="@string/message"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/black"
                    android:text="asdasdsad"
                    android:id="@+id/tv_price_day"/>
                <View
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_15"
                    android:background="@color/black"
                    android:alpha=".5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/black"
                    android:text="asdasdsad"
                    android:id="@+id/tv_price_week"/>
                <View
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_15"
                    android:background="@color/black"
                    android:alpha=".5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/black"
                    android:text="asdasdsad"
                    android:id="@+id/tv_price_month"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:text="asdasdsad"
                android:id="@+id/tv_city"/>
            <TextView
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:fontFamily="@font/montserrat_extrabold"
                android:textColor="@color/black"
                android:text="@string/description"/>
            <TextView
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:text="asdasdsad"
                android:id="@+id/tv_des"/>
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textAllCaps="true"
                android:fontFamily="@font/montserrat_extrabold"
                android:textColor="@color/black"
                android:text="@string/pickup_location"/>
            <TextView
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:text="asdasdsad"
                android:id="@+id/tv_address"/>
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:layout_marginVertical="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_15"
                android:id="@+id/bt_book"
                android:layout_toEndOf="@id/cv_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/color_primary"
                app:cardCornerRadius="@dimen/dp_20">
                <TextView
                    android:layout_marginVertical="@dimen/dp_8"
                    android:layout_marginHorizontal="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/white"
                    android:text="@string/book_now"/>
            </androidx.cardview.widget.CardView>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_no_data"
        android:text="@string/no_data"
        android:textColor="@color/grey1"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_medium"/>
</RelativeLayout>