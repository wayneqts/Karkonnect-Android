<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OtherUser"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bt_back"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/ic_arr_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/profile"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/sp_22" />
        <ImageView
            android:layout_alignParentEnd="true"
            android:id="@+id/bt_opt"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/ic_more"/>
    </RelativeLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:paddingHorizontal="@dimen/dp_15"
        android:id="@+id/ll_info"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@android:color/transparent"
            android:foreground="@drawable/bg_avatar"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/dp_50"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/iv"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_username"
            android:layout_marginVertical="@dimen/dp_15"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_bold"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/bt_block"
                android:layout_toEndOf="@id/cv_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/color_primary"
                app:cardCornerRadius="@dimen/dp_20">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:visibility="invisible"
                    android:id="@+id/ll_bt"
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp_8"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/ic_block"/>
                    <TextView
                        android:id="@+id/tv_block"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/white"
                        android:text="@string/block"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <ProgressBar
                    android:visibility="visible"
                    android:id="@+id/pb_loading"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/white"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="@dimen/dp_10"
                android:id="@+id/bt_email"
                android:layout_toEndOf="@id/cv_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/color_primary"
                app:cardCornerRadius="@dimen/dp_20">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp_8"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/ic_email"/>
                    <TextView
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/white"
                        android:text="@string/email"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/bt_mess"
                android:layout_toEndOf="@id/cv_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/color_primary"
                app:cardCornerRadius="@dimen/dp_20">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp_8"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/ic_send"/>
                    <TextView
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/white"
                        android:text="@string/message"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <TextView
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_bold"/>
        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/tv_name"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            android:textColor="@color/color_primary"
            android:fontFamily="@font/montserrat_medium"/>
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address1"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_bold"/>
        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/tv_address"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            android:textColor="@color/color_primary"
            android:fontFamily="@font/montserrat_medium"/>
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/country1"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_bold"/>
        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/tv_ct"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            android:textColor="@color/color_primary"
            android:fontFamily="@font/montserrat_medium"/>
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/state1"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_bold"/>
        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/tv_state"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            android:textColor="@color/color_primary"
            android:fontFamily="@font/montserrat_medium"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>